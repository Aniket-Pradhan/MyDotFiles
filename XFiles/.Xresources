!! Appearance
urxvt.termName: rxvt-unicode
urxvt.scrollBar: false
!urxvt.background: black
!urxvt.foreground: gray

!! Fonts
urxvt.font: xft:DejaVu Sans Mono:pixelsize=12
urxvt.boldFont: xft:DejaVu Sans Mono:pixelsize=12:weight=bold
urxvt.letterSpace: -1

!! Larger history limit
urxvt.saveLines: 10000

!! A man needs his borders
URxvt.internalBorder:  20

!! Perl extensions
!! Install resize-font from AUR
urxvt.perl-ext-common: default,matcher,resize-font

!! Open urls in browser with a single Click
urxvt.urlLauncher: /usr/bin/chromium
urxvt.matcher.button: 1

!! Change font size on Control-Plus/Minus
URxvt.keysym.C-Down:  resize-font:smaller
URxvt.keysym.C-Up:    resize-font:bigger

!! Copy/Paste using ctrl and shift
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

!! Get rid of the ISO shizz
URxvt.iso14755: false
URxvt.iso14755_52: false

!! Some transparency
URxvt.transparent:   true
URxvt.shading:       5

URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C

!! Haha
!! Yeah, I am one of those, who use these keys in Vim :-(
!urxvt.keysym.Home:          \033[1~
!urxvt.keysym.End:           \033[4~
!urxvt.keysym.Control-Up:    \033[1;5A
!urxvt.keysym.Control-Down:  \033[1;5B
!urxvt.keysym.Control-Left:  \033[1;5D
!urxvt.keysym.Control-Right: \033[1;5C

